<?xml version="1.0" encoding="UTF-8"?>
<templates>

<t t-name="ResponsiveForm">
    <form role="form" class="responsive-form" />
</t>

<t t-name="ResponsiveForm.Widget.Input">
    <div class="row">
        <div class="col-md-6">
            <label t-att-for="name + '_' + id"><t t-esc="field_description" /></label>
        </div>
        <div class="col-md-6">
            <t t-if="mode == 'edit'">
                <input class="form-control"
                       t-att-name="name"
                       t-att-type="input_type"
                       t-att-required="modifiers.required"
                       t-att-id="name + '_' + id"
                       t-att-placeholder="field_description"
                       t-att-value="value" />
            </t>
            <t t-if="mode == 'view'">
                <span class="value"><t t-esc="value" /></span>
            </t>
        </div>
    </div>
</t>

<t t-name="ResponsiveForm.Widget.Separator">
    <t t-esc="string" />
</t>



</templates>